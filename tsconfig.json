{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@ta-x-features": ["./features/index"],
      "@ta-x-features/*": ["./features/*"],
      "@ta-x-partials/*": ["./views/partials/*"],
      "@ta-x-globals": ["./globals/index"],
      "@ta-x-utilities": ["./utilities/index"],
      "@ta-x-utilities/*": ["./utilities/*"],
      "@ta-x-models": ["./models/index"],
      "@ta-x-components": ["./components/index"],
      "@ta-x-helpers": ["./helpers/index"],
      "@ta-x-build-helpers": [ "../build/helpers/index"],
      "@ta-x-types": ["./types/index"],
      "@ta-x-scss/*": ["./scss/*"],
      "@ta-x-tinymce-scss/*": [
        "./scss/features/staff-walkthrough-improvements/tinymce/*"
      ],
      "@ta-x-views/*": ["./views/*"],
      "@ta-x-svgs/*": ["./resources/svgs/*"],
      "@ta-x-project-root/*": ["../*"],
      "@ta-x-jest": ["../test/jest/index"],
      "@ta-x-jest/*": ["../test/jest/*"],
      "@ta-x-jest-views/*": ["../test/html/*"]
    }
  }
}