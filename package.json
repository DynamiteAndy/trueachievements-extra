{
  "name": "trueachievements-extras",
  "version": "3.2.0",
  "engines": {
    "node": ">=22.7.0"
  },
  "private": true,
  "description": "Provides a variety of extras for use on TrueAchievements",
  "bugs": {
    "url": "https://github.com/dynamiteandy/trueachievements-extra/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dynamiteandy/trueachievements-extra.git",
    "homepage": "https://github.com/dynamiteandy/trueachievements-extra.git"
  },
  "author": "Dynamite Andy - dynamiteandy@gmail.com",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "analyse": "cross-env analyse=true rspack build --config ./build/rspack.dev.conf.ts",
    "build": "concurrently --group --max-processes 3 --names \"dev,prod,prod-min\" \"pnpm run build:dev\" \"pnpm run build:prod\" \"pnpm run build:prod-min\"",
    "build:release": "concurrently --group --max-processes 2 --names \"prod,prod-min\" \"pnpm run build:prod\" \"pnpm run build:prod-min\"",
    "build:dev": "rspack build --config ./build/rspack.dev.conf.ts",
    "build:prod": "rspack build --config ./build/rspack.prod.conf.ts",
    "build:prod-min": "cross-env minimize=true rspack build --config ./build/rspack.prod.conf.ts",
    "lint": "concurrently --group --max-processes 3 --names \"scss,html,ts\" \"pnpm run lint:scss\" \"pnpm run lint:html\" \"pnpm run lint:ts\"",
    "lint:html": "prettier -c \"**/*.html\" \"**/*.hbs\"",
    "lint:scss": "prettier -c \"**/*.scss\"",
    "lint:ts": "eslint . --ext .ts",
    "fix": "concurrently --group --max-processes 3 --names \"scss,html,ts\" \"pnpm run fix:scss\" \"pnpm run fix:html\" \"pnpm run fix:ts\"",
    "fix:html": "prettier -w \"**/*.html\" \"**/*.hbs\"",
    "fix:scss": "prettier -w \"**/*.scss\"",
    "fix:ts": "eslint . --fix --ext .ts",
    "start": "cross-env watch=true pnpm run build:dev",
    "test:reports": "vitest --config vitest.reports.config.ts --ui",
    "test:github": "vitest --config vitest.github.config.ts"
  },
  "devDependencies": {
    "@minify-html/node": "^0.15.0",
    "@rsdoctor/rspack-plugin": "^0.4.7",
    "@rspack/cli": "^1.0.13",
    "@rspack/core": "^1.0.13",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.7.7",
    "@types/sanitize-html": "^2.13.0",
    "@types/tampermonkey": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@typescript-eslint/utils": "^8.10.0",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/eslint-plugin": "^1.1.7",
    "@vitest/ui": "^2.1.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "emoji.json": "^15.1.0",
    "esbuild-loader": "^4.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-import-resolver-webpack": "^0.13.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "html-loader": "^5.1.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "marked": "^14.1.3",
    "marked-mangle": "^1.1.9",
    "prettier": "^3.3.3",
    "sanitize-html": "^2.13.1",
    "sass": "^1.80.3",
    "sass-loader": "^16.0.2",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.6.3",
    "userscript-metadata-webpack-plugin": "^0.4.0",
    "vite-tsconfig-paths": "^4.3.0",
    "vitest": "^2.1.3",
    "webpack-merge": "^6.0.1"
  },
  "url": "https://github.com/dynamiteandy/trueachievements-extra",
  "dependencies": {
    "@eastdesire/jscolor": "^2.5.2",
    "ajax-interceptor": "^1.0.1",
    "compress-json": "^3.1.0"
  }
}