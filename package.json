{
  "name": "trueachievements-extras",
  "version": "2.11.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "description": "Provides a variety of extras for use on TrueAchievements",
  "bugs": {
    "url": "https://github.com/andrewcartwright1/trueachievements-extra/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewcartwright1/trueachievements-extra.git",
    "homepage": "https://github.com/andrewcartwright1/trueachievements-extra.git"
  },
  "author": "Dynamite Andy - dynamiteandy@gmail.com",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "analyse": "cross-env webpack_analyse=true webpack --config ./build/webpack.dev.conf.ts",
    "build": "concurrently --names \"dev,prod,prod-min\" \"pnpm run build:dev\" \"pnpm run build:prod\" \"pnpm run build:prod-min\"",
    "build:dev": "webpack --config ./build/webpack.dev.conf.ts",
    "build:prod": "webpack --config ./build/webpack.prod.conf.ts",
    "build:prod-min": "cross-env webpack_minimize=true webpack --config ./build/webpack.prod.conf.ts",
    "lint": "concurrently --max-processes 1 --names \"scss,html,ts\" \"pnpm run lint:scss\" \"pnpm run lint:html\" \"pnpm run lint:ts\"",
    "lint:html": "stylelint \"**/*.html\"",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:ts": "eslint . --ext .ts",
    "start": "cross-env webpack_watch=true pnpm run build:dev",
    "test": "concurrently --max-processes 1 --names \"jasmine,c8\" \"pnpm run test:jasmine\" \"pnpm run test:c8\"",
    "test:jasmine": "c8 node -r tsconfig-paths/register node_modules/jasmine/bin/jasmine.js --reporter=jasmine-console-reporter --config=./jasmine.json",
    "test:c8": "c8 report --reporter=html"
  },
  "devDependencies": {
    "@minify-html/node": "^0.10.8",
    "@statoscope/webpack-plugin": "^5.26.2",
    "@types/jasmine": "^4.3.1",
    "@types/jsdom": "^21.1.1",
    "@types/marked": "^4.0.8",
    "@types/sanitize-html": "^2.9.0",
    "@types/tampermonkey": "^4.0.10",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "c8": "^7.13.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "handlebars": "^4.7.7",
    "html-loader": "^4.2.0",
    "husky": "^8.0.3",
    "jasmine": "^4.6.0",
    "jasmine-console-reporter": "^3.1.0",
    "jsdom": "^21.1.1",
    "marked": "^4.3.0",
    "sanitize-html": "^2.10.0",
    "sass": "^1.61.0",
    "sass-loader": "^13.2.2",
    "sass-to-string": "^1.6.3",
    "stylelint": "^15.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.4",
    "userscript-metadata-webpack-plugin": "^0.2.12",
    "webpack": "^5.78.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "webpack-sources": "^3.2.3"
  },
  "url": "https://github.com/andrewcartwright1/trueachievements-extra",
  "dependencies": {
    "@eastdesire/jscolor": "^2.5.1",
    "ajax-interceptor": "^1.0.1",
    "emoji.json": "^14.0.0"
  }
}
