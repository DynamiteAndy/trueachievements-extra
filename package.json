{
  "name": "trueachievements-extras",
  "version": "3.1.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "description": "Provides a variety of extras for use on TrueAchievements",
  "bugs": {
    "url": "https://github.com/dynamiteandy/trueachievements-extra/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dynamiteandy/trueachievements-extra.git",
    "homepage": "https://github.com/dynamiteandy/trueachievements-extra.git"
  },
  "author": "Dynamite Andy - dynamiteandy@gmail.com",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "analyse": "cross-env webpack_analyse=true webpack --config ./build/webpack.dev.conf.ts",
    "build": "concurrently --group --max-processes 3 --names \"dev,prod,prod-min\" \"pnpm run build:dev\" \"pnpm run build:prod\" \"pnpm run build:prod-min\"",
    "build:release": "concurrently --group --max-processes 2 --names \"prod,prod-min\" \"pnpm run build:prod\" \"pnpm run build:prod-min\"",
    "build:dev": "webpack --config ./build/webpack.dev.conf.ts",
    "build:prod": "webpack --config ./build/webpack.prod.conf.ts",
    "build:prod-min": "cross-env webpack_minimize=true webpack --config ./build/webpack.prod.conf.ts",
    "lint": "concurrently --group --max-processes 3 --names \"scss,html,ts\" \"pnpm run lint:scss\" \"pnpm run lint:html\" \"pnpm run lint:ts\"",
    "lint:html": "prettier -c \"**/*.html\" \"**/*.hbs\"",
    "lint:scss": "prettier -c \"**/*.scss\"",
    "lint:ts": "eslint . --ext .ts",
    "fix": "concurrently --group --max-processes 3 --names \"scss,html,ts\" \"pnpm run fix:scss\" \"pnpm run fix:html\" \"pnpm run fix:ts\"",
    "fix:html": "prettier -w \"**/*.html\" \"**/*.hbs\"",
    "fix:scss": "prettier -w \"**/*.scss\"",
    "fix:ts": "eslint . --fix --ext .ts",
    "start": "cross-env webpack_watch=true pnpm run build:dev",
    "test:reports": "jest --silent --coverage --config jest.reports.config.ts",
    "test:github": "jest --verbose --config jest.github.config.ts"
  },
  "devDependencies": {
    "@minify-html/node": "^0.15.0",
    "@statoscope/webpack-plugin": "^5.28.2",
    "@swc/jest": "^0.2.29",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.7",
    "@types/sanitize-html": "^2.9.5",
    "@types/tampermonkey": "^5.0.2",
    "@types/webpack-bundle-analyzer": "^4.6.3",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@typescript-eslint/utils": "^6.18.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "emoji.json": "^15.1.0",
    "esbuild-loader": "^4.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-import-resolver-webpack": "^0.13.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "html-loader": "^4.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-each": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-progress-bar-reporter": "^1.0.25",
    "jsdom": "^23.2.0",
    "marked": "^11.1.1",
    "marked-mangle": "^1.1.6",
    "prettier": "^3.1.1",
    "sanitize-html": "^2.11.0",
    "sass": "^1.69.7",
    "sass-loader": "^13.3.3",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "userscript-metadata-webpack-plugin": "^0.4.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "webpack-sources": "^3.2.3"
  },
  "url": "https://github.com/dynamiteandy/trueachievements-extra",
  "dependencies": {
    "@eastdesire/jscolor": "^2.5.2",
    "ajax-interceptor": "^1.0.1",
    "compress-json": "^3.0.0"
  }
}